pipeline {
    agent any

    parameters {
        string(name: 'BUILD_VERSION', defaultValue: 'latest', description: 'Docker image tag version')
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('docker-hub-credentials') // Store your Docker credentials in Jenkins
        DOCKER_IMAGE = "Mita-Jenkins/demo-app:${BUILD_VERSION}"
        GITHUB_REPO = "https://github.com/Mita_Jenkins/demo-app.git"
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "${https://github.com/mita-devops/Mita_Jenkins.git}"
            }
        }

        stage('Build Docker Image') {
            steps {
                sh "docker build -t ${DOCKER_IMAGE}:${params.BUILD_VERSION} ."
            }
        }

        stage('Login to Docker Hub') {
            steps {
                sh "echo ${Mita4229@} | docker login -u ${Mita_docker} --password-stdin"
            }
        }

        stage('Push Docker Image') {
            steps {
                sh "docker push ${DOCKER_IMAGE}:${BUILD_VERSION}"
            }
        }
    }

    post {
        success {
            echo "Pipeline executed successfully!"
        }
        failure {
            echo "Pipeline failed!"
        }
    }
}
